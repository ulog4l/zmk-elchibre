#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

&lt {
    tapping-term-ms = <120>;
    flavor = "balanced";
};

&mt {
    tapping-term-ms = <120>;
    flavor = "balanced";
};

/ {
    combos {
        compatible = "zmk,combos";
        combo_esc {
            timeout-ms = <27>;
            key-positions = <0 1>;
            bindings = <&kp ESC>;
        };
        combo_enter {
            timeout-ms = <27>;
            key-positions = <17 18>;
            bindings = <&kp ENTER>;
        };
    };
};

/ {
    keymap {
        compatible = "zmk,keymap";

        BASE {
            bindings = <
                &mt LS(LALT) ESC   &lt FUNC W  &kp F      &kp P      &kp B     &kp J &kp L      &kp U     &kp Y    &kp SEMI
                &kp A              &mt LG R    &lt NUM S  &lt SYM T  &kp G     &kp M &lt NAVN N &kp E     &kp I    &kp O
                &sk LS             &kp X       &kp C      &kp D      &kp V     &kp K &kp H      &kp COMMA &kp Z    &kp RSHIFT 
                                   &kp LALT         &lt NAVT SPACE     &kp BACKSPACE       &kp RALT
            >;
        };

        function {
            bindings = <
                &trans    &kp F7 &kp F8 &kp F9 &kp F12          &bt BT_CLR_ALL &trans &trans &trans &bootloader
                &kp LSHFT &kp F4 &kp F5 &kp F6 &kp F11          &trans &trans &trans &trans &kp RSHIFT
                &kp LCTRL &kp F1 &kp F2 &kp F3 &kp F10          &trans &trans &trans &trans &kp RCTRL
                              &trans         &trans             &trans         &trans
            >;
        };

        symbols {
            bindings = <
                &kp Q         &kp N7 &kp N8 &kp N9 &kp EQUAL       &trans &kp GRAVE &kp LPAR &kp RPAR &trans
                &mt LSHIFT N0 &kp N4 &kp N5 &kp N6 &kp MINUS       &trans &kp SQT   &kp LBRC &kp RBRC &kp RSHIFT
                &kp KP_SLASH  &kp N1 &kp N2 &kp N3 &kp KP_DOT      &trans &kp NUBS  &kp LBKT &kp RBKT &kp RCTRL
                                       &trans          &trans      &trans   &trans
            >;
        };

        navigation {
            bindings = <
                &trans    &kp C_VOL_DN &kp C_VOL_UP &trans &trans          &kp INS   &kp HOME     &kp UP   &kp END   &trans
                &kp LSHFT &kp C_PREV   &kp C_NEXT   &trans &trans          &kp PG_UP &kp LEFT     &kp DOWN &kp RIGHT &kp RSHFT
                &kp LCTRL &trans       &trans       &trans &trans          &kp PG_DN &kp LC(LEFT) &trans   &kp LC(RIGHT)    &kp RCTRL
                                       &trans              &kp DEL         &kp ENTER    &trans
            >;
        };
    };
};
